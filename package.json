{
  "name": "order-manager",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Guilherme Rauen",
  "description": "Order Management System using Domain-Driven Design (DDD).",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.json",
    "build:prod": "npm run lint && npm run test:cov && npm audit --omit dev && npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "jest --no-cache --runInBand --detectOpenHandles --verbose",
    "test:all": "npm run lint && npm run test:cov && npm audit && npm run build",
    "test:cov": "npm run test -- --collectCoverage --coverageDirectory=\"./coverage\"",
    "test:watch": "npm run test -- --watch",
    "start": "node dist/src/index.js",
    "start:dev": "tsc-watch -p tsconfig.json --onSuccess \"node dist/src/index.js\""
  },
  "dependencies": {
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-validator": "7.2.1",
    "helmet": "8.0.0",
    "mongoose": "8.12.1",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "ts-error": "1.0.6"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.7",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.9",
    "@types/supertest": "6.0.2",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.8",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "@typescript-eslint/parser": "8.26.0",
    "eslint": "9.21.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-promise": "7.2.1",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "ts-jest": "29.2.6",
    "ts-node": "10.9.2",
    "tsc-watch": "6.2.1",
    "typescript": "5.8.2"
  }
}
